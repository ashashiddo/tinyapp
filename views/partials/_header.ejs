<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
          <% if (user) { %> <!-- Display the user email if the user is logged in -->
            <form method="POST" action="logout">
              <p>Logged in as <%= user.email %></p>
              <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Log Out</button>
            </form>
          <% } else { %> <!-- Display the login form if the user is not logged in -->
            <a class="nav-item nav-link" href="/register">Register</a> <!-- Add Register link pointing to Register page -->
            <a class="nav-item nav-link" href="/login">Login</a> <!-- Add Login link pointing to Login page -->
          <% } %>   
      </div>
    </nav>
  </header>
  